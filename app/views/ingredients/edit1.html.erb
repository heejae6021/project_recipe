    <%= form_for @ingredient, method: :post do |f| %>
    
     <%= f.submit "", :type => :image, :src => image_path('vegetable_recipe.png'), class: "col-xs-2 submitt" %>
        
        <div class="container">
        <div class="row">
            <% @items.each do |i| %>
                <div class="col-xs-3">
                  <hr> <h3 class="w700"> <%= i.ss_category %> </h3><br>
                  <div class="btn-group btn-group-vertical" data-toggle="buttons">
                      <% i.ss_ingred.split(',').each do |ingr| %>
                        <label class="btn">
                          
                          <%= f.check_box :s_ingred, { :multiple => true }, ingr, nil %> <i class="fa fa-square-o fa-2x"></i>
                          <i class="fa fa-check-square-o fa-2x"></i> <span> <%= f.label ingr %> </span>
                        </label>
                    <% end %>
                  </div>
                </div>
            <% end %>
          </div>
        <%#= f.submit '저장', class: 'btn btn-primary btn-lg' %>
            


    <% end %>
</div>




